# Google Sheets
SHEET_ID=your_sheet_id_here
# Имя листа (tab) внутри таблицы
WORKSHEET_NAME=Sheet1
# Имя колонки (заголовок) или индекс (1-based)
URL_COLUMN=WEBSITE
# Путь к JSON сервисного аккаунта (файл нужно получить в Google Cloud Console)
GOOGLE_CREDENTIALS_PATH=./google-credentials.json

# Telegram (личный аккаунт через Telethon)
# TELEGRAM_API_ID и TELEGRAM_API_HASH взять в https://my.telegram.org
TELEGRAM_API_ID=123456
TELEGRAM_API_HASH=your_telegram_api_hash_here
# Чат можно указать как @username или числовой ID (для групп -id, для супергрупп -100id)
TELEGRAM_TARGET=@your_group_or_channel
# Путь к файлу сессии Telethon (создается автоматически при первом входе)
TELEGRAM_SESSION_PATH=./data/telegram.session

# Настройки запуска
RUN_HEADLESS=true  # false для визуального режима
TIMEOUT_MS=30000
USER_AGENT=
STATE_PATH=./data/notified.json
MAX_TELEGRAM_CHARS=3800
LOG_LEVEL=INFO
DRY_RUN=false
SOURCE1_ENABLED=true
SOURCE2_ENABLED=true

# Селекторы (можно менять без релиза кода)
SOURCE1_URL=https://portugalruncalendar.com
SOURCE1_EVENT_LINKS=div.space-y-6 a.block.h-full
SOURCE1_NEXT_BUTTON_SELECTOR=button:has-text("Próxima"):not([disabled])
SOURCE2_URL=https://www.portugalrunning.com/calendario-de-corridas/
SOURCE2_NEXT_BUTTON=button#evcal_next
SOURCE2_MONTH_LIST_LINKS=div.evo_events_list_box div.eventon_list_event a
SOURCE2_EVENT_LIST=div.eventon_events_list div.eventon_list_event
SOURCE2_EVENT_LINKS=a.evcal_evdata_row

# Лимиты
MAX_PAGINATION_PAGES=200
